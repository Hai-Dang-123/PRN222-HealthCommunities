    <a name="projects"></a>
    <h3>Our Projects</h3>
    <p class="subtitle">Innovative Research & Training Initiatives</p>

    <ul class="portfolio-list">
        <li class="item">
            <a href="images/project-1.jpg" data-featherlight="images/project-1.jpg" class="photo-overlay">
                <img src="images/project-1-thumb.jpg" alt="Healthcare Training Program" />
            </a>
        </li>
        <li class="item">
            <a href="images/project-2.jpg" data-featherlight="images/project-2.jpg" class="photo-overlay">
                <img src="images/project-2-thumb.jpg" alt="Public Health Research" />
            </a>
        </li>
        <li class="item">
            <a href="images/project-3.jpg" data-featherlight="images/project-3.jpg" class="photo-overlay">
                <img src="images/project-3-thumb.jpg" alt="Medical Innovation Studies" />
            </a>
        </li>
        <li class="item">
            <a href="images/project-4.jpg" data-featherlight="images/project-4.jpg" class="photo-overlay">
                <img src="images/project-4-thumb.jpg" alt="Community Health Programs" />
            </a>
        </li>
        <li class="item">
            <a href="images/project-5.jpg" data-featherlight="images/project-5.jpg" class="photo-overlay">
                <img src="images/project-5-thumb.jpg" alt="Global Health Partnerships" />
            </a>
        </li>
        <li class="item">
            <a href="images/project-6.jpg" data-featherlight="images/project-6.jpg" class="photo-overlay">
                <img src="images/project-6-thumb.jpg" alt="Clinical Research Trials" />
            </a>
        </li>
        <div class="clear"></div>
    </ul>
</section>

  @if (string.IsNullOrEmpty(fullName)) 
            
            { 

    <section class="email-list-section fade-in">
